@model KonusarakOgren.WebUI.Models.ExamProperty
@{
    ViewData["Title"] = "BeingQuizz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    int sayac = 1;
}
<div class="container">
    <div>Makale Başlık=></div>
    <div>@Model.makaletitle</div>
    <div class="row">
        @for (int i = 0; i < Model.MakaleContext.Count(); i++)
        {
            <div class="col-sm-12">
                <p>@Model.MakaleContext[i]</p>
            </div>
        }
        <div class="row" >
           
                @for (int i = 0; i < Model.ExamQuestions.Count(); i++)
                {

                    <div class="col-md-12" style="margin-top:20px; margin-bottom:20px;">
                        <div class="col-md-12" style="float:left;">@sayac . Soru<input type="text" class="form-control" value="@Model.ExamQuestions[i].Question"  name="ExamQuestions[@i].Question" placeholder="@sayac . Soru" readonly /></div>
                        <br />
                        <div class="col-md-6" style="float:left"><span>A)</span><input style="cursor:pointer" type="text" readonly required class="form-control" value="@Model.ExamQuestions[i].Aoption" name="ExamQuestions[@i].Aoption" /></div>
                        <div class="col-md-6" style="float:left"><span>B)</span><input style="cursor:pointer" type="text" readonly required class="form-control" value="@Model.ExamQuestions[i].Boption" name="ExamQuestions[@i].Boption" /></div>

                        <div class="col-md-6" style="float:left"><span>C)</span><input style="cursor:pointer" type="text" readonly required class="form-control" value="@Model.ExamQuestions[i].Coption" name="ExamQuestions[@i].Coption" /></div>
                        <div class="col-md-6" style="float:left"><span>D)</span><input style="cursor:pointer" type="text" readonly required class="form-control" value="@Model.ExamQuestions[i].Doption" name="ExamQuestions[@i].Doption" /></div>
                    </div>
                    <br /><br />

                    sayac = sayac + 1;
                }

                <button class="btn btn-primary tiklanacak" style="width:200px; margin-top:30px; margin-left:30%; margin-right:50%;" type="submit">SINAVI TAMAMLA</button>

        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var cevaplar = [];
        $("input").click(function () {
            var veri = $(this).val();
            $(this).css("background-color", "yellow");
           
            cevaplar.push(veri);
            $(".tiklanacak").click(function () {
        
                window.location.replace("ExamSonuc?dizi=" + cevaplar);
            });
        });
    });
</script>